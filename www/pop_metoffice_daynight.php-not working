}
//snow
if ($forecastacumm[$k] > 0)
{
    echo '&nbsp;' . $snowflakesvg[$k] . '<valuer>Snow  <bluer>' . $forecastacumm[$k] . 'cm</bluer>';
}
//rain
else if ($forecastPrecipType[$k] = 'rain' && $rainunit == 'in')
{
